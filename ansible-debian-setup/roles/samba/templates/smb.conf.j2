[global]
   workgroup = WORKGROUP
   server string = Agger Server
   security = user
   netbios name = AGGER
   bind interfaces only = yes
   interfaces = 192.168.0.104
   min protocol = SMB2
   server min protocol = SMB2
   server max protocol = SMB3
   socket options = TCP_NODELAY IPTOS_LOWDELAY SO_KEEPALIVE
   deadtime = 5
   keepalive = 60
   log level = 1
   max log size = 50
   log file = /var/log/samba/log.%m
   unix extensions = no
   wide links = yes
   follow symlinks = yes

[homes]
   comment = Home Directories
   browseable = no
   read only = no
   create mask = 0700
   directory mask = 0700
   valid users = %S

{% for device in available_devices.stdout_lines %}
{% if "loop" not in device %}
[DISK_{{ device | upper }}]
   comment = Disk /dev/{{ device }}
   path = /mnt/disk_{{ device }}
   browseable = yes
   read only = no
   writable = yes
   force user = agger
   force group = agger
   create mask = 0777
   directory mask = 0777
   public = yes
   guest ok = yes
{% endif %}
{% endfor %}